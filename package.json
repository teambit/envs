{
  "name": "envs",
  "version": "0.0.1",
  "description": "Environments Common for the bit Community",
  "main": "index.js",
  "scripts": {
    "clean": "./.taskfile clean",
    "test": "./.taskfile run_test",
    "prettier": "node_modules/.bin/prettier --write \"./**/**/*.ts\"",
    "build": "run-s build:bit",
    "build:bit": "bit build",
    "pre-commit": "run-s prettier",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix --jsx",
    "watch": "bit watch",
    "postinstall": "./.taskfile post_install ",
    "changelog": "node_modules/.bin/conventional-changelog -o CHANGELOG.md"
  },
  "keywords": [],
  "author": "Doron Tsur, <doron@bit.dev>",
  "license": "MIT",
  "dependencies": {
    "@types/mocha": "^5.2.7",
    "execa": "^2.0.4",
    "lodash": "^4.17.15",
    "recursive-readdir": "^2.2.2",
    "tslint-config-prettier": "^1.18.0",
    "uuid": "^3.3.3",
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@types/babel__core": "^7.1.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.7.4",
    "@types/recursive-readdir": "^2.2.0",
    "@types/uuid": "^3.4.5",
    "@types/vinyl": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "conventional-changelog-cli": "^2.0.27",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "bit": {
    "env": {
      "compiler": {
        "bit.envs/compilers/typescript@3.1.11": {
          "rawConfig": {
            "tsconfig": {
              "compilerOptions": {
                "target": "ES5",
                "module": "CommonJS",
                "skipLibCheck": true
              }
            }
          }
        }
      }
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm",
    "overrides": {
      "*": {
        "devDependencies": {
          "@types/node": "+",
          "@types/mocha": "^5.2.7"
        }
      },
      "types": {
        "env": {
          "compiler": "-"
        }
      },
      "compilers/typescript": {
        "dependencies": {
          "@types/recursive-readdir": "+",
          "recursive-readdir": "+",
          "bit-bin": "-"
        },
        "devDependencies": {
          "@types/node": "+",
          "@types/mocha": "^5.2.7",
          "bit-bin": "14.6.0"
        }
      },
      "compilers/react": {
        "dependencies": {
          "@babel/plugin-proposal-class-properties": "^7.7.4",
          "@babel/plugin-proposal-export-default-from": "^7.7.4",
          "@babel/plugin-proposal-export-namespace-from": "^7.7.4",
          "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
          "@babel/plugin-proposal-optional-chaining": "^7.7.5",
          "@babel/preset-env": "^7.7.6",
          "@babel/preset-react": "^7.7.4"
        }
      }
    }
  }
}
