{
  "name": "envs",
  "version": "0.0.1",
  "description": "Environments Common for the bit Community",
  "main": "index.js",
  "scripts": {
    "clean": "./.taskfile clean",
    "test": "./.taskfile run_test",
    "prettier": "prettier --write \"./**/**/*.ts\"",
    "build": "run-s build:bit",
    "build:bit": "bit build",
    "pre-commit": "run-s prettier",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix --jsx",
    "watch": "bit watch",
    "postinstall": "./.taskfile post_install ",
    "changelog": "conventional-changelog -o CHANGELOG.md"
  },
  "keywords": [],
  "author": "Teambit",
  "license": "MIT",
  "dependencies": {
    "@bit/bit.envs.compilers.utils": "0.0.7",
    "@bit/bit.envs.internal.babel-base-compiler": "^1.0.4",
    "@types/mocha": "^5.2.7",
    "execa": "^2.0.4",
    "lodash": "^4.17.15",
    "recursive-readdir": "^2.2.2",
    "tslint-config-prettier": "^1.18.0",
    "uuid": "^3.3.3",
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "@angular/compiler": "^9.0.0",
    "@angular/compiler-cli": "^9.1.0-rc.0",
    "@angular/core": "^9.0.0",
    "@babel/core": "^7.5.5",
    "@bazel/typescript": "^1.4.1",
    "@stencil/core": "^1.11.2",
    "@types/babel__core": "^7.1.2",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.7.4",
    "@types/recursive-readdir": "^2.2.0",
    "@types/uuid": "^3.4.5",
    "@types/vinyl": "^2.0.3",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "conventional-changelog-cli": "^2.0.27",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "mock-fs": "^4.11.0",
    "ng-packagr": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.1",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.3.0",
    "tsickle": "^0.38.1",
    "tslint": "^5.20.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "bit": {
    "env": {
      "compiler": {
        "bit.envs/compilers/typescript": {
          "rawConfig": {
            "tsconfig": {
              "compilerOptions": {
                "module": "CommonJS"
              },
              "exclude": [
                "node_modules",
                "dist",
                ".dependencies",
                "*.spec.ts",
                "*.e2e.ts"
              ]
            }
          }
        }
      }
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm",
    "overrides": {
      "*": {
        "devDependencies": {
          "@types/node": "+",
          "@types/mocha": "^5.2.7"
        }
      },
      "types": {
        "env": {
          "compiler": "-"
        }
      },
      "compilers/typescript": {
        "dependencies": {
          "bit-bin": "-"
        },
        "devDependencies": {
          "@types/node": "+",
          "@types/mocha": "^5.2.7",
          "bit-bin": "14.6.0"
        }
      },
      "compilers/angular": {
        "dependencies": {
          "bit-bin": "-"
        },
        "devDependencies": {
          "@types/node": "+",
          "@types/webpack-env": "+"
        },
        "env": {
          "compiler": {
            "bit.envs/compilers/typescript@3.1.40": {
              "rawConfig": {
                "compilerPath": "typescript/bin/tsc",
                "compilerArguments": [
                  "--declaration"
                ],
                "compiledFileTypes": [
                  ".ts",
                  ".tsx"
                ],
                "configFileName": "tsconfig.json",
                "tsconfig": {
                  "compilerOptions": {
                    "outDir": "dist",
                    "target": "ES2015",
                    "sourceMap": false,
                    "moduleResolution": "Node",
                    "esModuleInterop": true,
                    "module": "CommonJS",
                    "allowSyntheticDefaultImports": true,
                    "resolveJsonModule": true,
                    "declaration": true,
                    "experimentalDecorators": true,
                    "inlineSourceMap": false,
                    "inlineSources": false,
                    "jsx": "react",
                    "rootDir": "./",
                    "removeComments": true,
                    "typeRoots": [
                      "./node_modules/@types"
                    ],
                    "importHelpers": false
                  },
                  "include": [
                    "./**/*"
                  ],
                  "exclude": [
                    "node_modules",
                    "dist",
                    ".dependencies",
                    "*.spec.ts",
                    "*.e2e.ts"
                  ]
                },
                "development": false,
                "copyPolicy": {
                  "ignorePatterns": [
                    "package.json",
                    "package-lock.json",
                    "tsconfig.json"
                  ],
                  "disable": false
                }
              },
              "options": {},
              "files": {}
            }
          }
        }
      },
      "compilers/react-typescript": {
        "dependencies": {
          "bit-bin": "-"
        },
        "devDependencies": {
          "@types/node": "+",
          "@types/mocha": "^5.2.7",
          "bit-bin": "14.6.0"
        }
      },
      "compilers/react": {
        "dependencies": {
          "@babel/core": "^7.8.4",
          "bit-bin": "-"
        },
        "devDependencies": {
          "@types/node": "+",
          "@types/mocha": "^5.2.7",
          "bit-bin": "^14.7.1"
        }
      },
      "compilers/react-native": {
        "dependencies": {
          "bit-bin": "-",
          "@babel/cli": "^7.8.3",
          "@babel/core": "^7.8.3",
          "@bit/bit.envs.common.build-component": "-"
        },
        "devDependencies": {
          "@types/node": "+",
          "@types/mocha": "^5.2.7",
          "bit-bin": "^14.7.1",
          "@bit/bit.envs.common.build-component": "0.0.14"
        }
      },
      "compilers/utils": {
        "devDependencies": {
          "@types/node": "+",
          "@types/jest": "+"
        }
      },
      "compilers/vue": {
        "devDependencies": {
          "@types/node": "+",
          "@types/jest": "+"
        },
        "env": {
          "compiler": {
            "bit.envs/compilers/typescript@3.1.40": {
              "rawConfig": {
                "compilerPath": "typescript/bin/tsc",
                "compilerArguments": [
                  "--declaration"
                ],
                "compiledFileTypes": [
                  ".ts",
                  ".tsx"
                ],
                "configFileName": "tsconfig.json",
                "tsconfig": {
                  "compilerOptions": {
                    "outDir": "dist",
                    "target": "ES2015",
                    "sourceMap": false,
                    "moduleResolution": "Node",
                    "esModuleInterop": true,
                    "module": "CommonJS",
                    "allowSyntheticDefaultImports": true,
                    "resolveJsonModule": true,
                    "declaration": true,
                    "experimentalDecorators": true,
                    "inlineSourceMap": false,
                    "inlineSources": false,
                    "jsx": "react",
                    "rootDir": "./",
                    "removeComments": true,
                    "typeRoots": [
                      "./node_modules/@types"
                    ],
                    "importHelpers": false
                  },
                  "include": [
                    "./**/*"
                  ],
                  "exclude": [
                    "node_modules",
                    "dist",
                    ".dependencies",
                    "*.spec.ts",
                    "*.e2e.ts"
                  ]
                },
                "development": false,
                "copyPolicy": {
                  "ignorePatterns": [
                    "package.json",
                    "package-lock.json",
                    "tsconfig.json"
                  ],
                  "disable": false
                }
              },
              "options": {}
            }
          }
        }
      }
    }
  }
}
